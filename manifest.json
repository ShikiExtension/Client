{
  "manifest_version": 2,
  "name": "ShikiExtension",
  "version": "0.1",
  "description": "The browser extension for shikimori.one",
  "content_scripts": [
    {
      "matches": ["https://shikimori.one/*"],
      "css": ["resources/css/main.css"],
      "js": [
        "src/models/TitleVideo.js",
        "src/controllers/TitlesController.js",

        "src/exceptions/HttpException.js",
        "src/exceptions/NotFoundHttpException.js",

        "src/classes/Cache/Cache.js",
        "src/classes/Config/Config.js",
        "src/classes/Container/Container.js",
        "src/classes/NavigationObserver/NavigationObserver.js",
        "src/classes/HttpClient/HttpClient.js",
        "src/classes/Router/Router.js",
        "src/classes/Router/Route.js",
        "src/classes/View/View.js",

        "src/ServiceProvider.js",
        "src/Application.js",

        "config/api-urls.js",
        "routes/titles.js",

        "src/bootstrap.js"
      ]
    }
  ],
  "permissions": [],
  "web_accessible_resources": ["resources/*/*"]
}